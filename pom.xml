<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.hpe.caf.autoscale</groupId>
    <artifactId>autoscale-marathon-rabbit-container</artifactId>
    <version>2</version>
    <packaging>pom</packaging>

    <properties>
        <caf-ConfigurationSource.groupId>com.hpe.caf.config</caf-ConfigurationSource.groupId>
        <caf-ConfigurationSource.artifactId>config-file</caf-ConfigurationSource.artifactId>
        <caf-ConfigurationSource.version>9.0</caf-ConfigurationSource.version>

        <caf-Codec.groupId>com.hpe.caf.codec</caf-Codec.groupId>
        <caf-Codec.artifactId>codec-json</caf-Codec.artifactId>
        <caf-Codec.version>9.0</caf-Codec.version>

        <autoscaler-ServiceSource.groupId>com.hpe.caf.autoscale</autoscaler-ServiceSource.groupId>
        <autoscaler-ServiceSource.artifactId>autoscale-source-marathon</autoscaler-ServiceSource.artifactId>
        <autoscaler-ServiceSource.version>9.0</autoscaler-ServiceSource.version>

        <autoscaler-ServiceScaler.groupId>com.hpe.caf.autoscale</autoscaler-ServiceScaler.groupId>
        <autoscaler-ServiceScaler.artifactId>autoscale-scaler-marathon</autoscaler-ServiceScaler.artifactId>
        <autoscaler-ServiceScaler.version>9.0</autoscaler-ServiceScaler.version>

        <autoscaler-WorkloadAnalyser.groupId>com.hpe.caf.autoscale</autoscaler-WorkloadAnalyser.groupId>
        <autoscaler-WorkloadAnalyser.artifactId>autoscale-workload-rabbit</autoscaler-WorkloadAnalyser.artifactId>
        <autoscaler-WorkloadAnalyser.version>9.0</autoscaler-WorkloadAnalyser.version>


    </properties>

    <parent>
        <groupId>com.hpe.caf</groupId>
        <artifactId>caf-maven</artifactId>
        <version>9</version>
    </parent>

    <dependencies>
        <dependency>
            <groupId>com.hpe.caf</groupId>
            <artifactId>caf-api</artifactId>
            <version>9.0</version>
        </dependency>
        <dependency>
            <groupId>${caf-ConfigurationSource.groupId}</groupId>
            <artifactId>${caf-ConfigurationSource.artifactId}</artifactId>
            <version>${caf-ConfigurationSource.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hpe.caf.autoscale</groupId>
            <artifactId>autoscale-core</artifactId>
            <version>9.0</version>
        </dependency>
        <dependency>
            <groupId>com.hpe.caf.autoscale</groupId>
            <artifactId>autoscale-marathon-shared</artifactId>
            <version>1</version>
        </dependency>
        <dependency>
            <groupId>${autoscaler-ServiceSource.groupId}</groupId>
            <artifactId>${autoscaler-ServiceSource.artifactId}</artifactId>
            <version>${autoscaler-ServiceSource.version}</version>
        </dependency>
        <dependency>
            <groupId>${autoscaler-ServiceScaler.groupId}</groupId>
            <artifactId>${autoscaler-ServiceScaler.artifactId}</artifactId>
            <version>${autoscaler-ServiceScaler.version}</version>
        </dependency>
        <dependency>
            <groupId>${autoscaler-WorkloadAnalyser.groupId}</groupId>
            <artifactId>${autoscaler-WorkloadAnalyser.artifactId}</artifactId>
            <version>${autoscaler-WorkloadAnalyser.version}</version>
        </dependency>
        <dependency>
            <groupId>${caf-Codec.groupId}</groupId>
            <artifactId>${caf-Codec.artifactId}</artifactId>
            <version>${caf-Codec.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.krallin</groupId>
            <artifactId>tini</artifactId>
            <version>${tini.version}</version>
            <scope>runtime</scope>
            <type>exe</type>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jolokia</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>${docker.maven.version}</version>
                <configuration>
                    <watchInterval>500</watchInterval>
                    <logDate>default</logDate>
                    <verbose>true</verbose>
                    <images>
                        <image>
                            <alias>autoscale-container</alias>
                            <name>caf/autoscale-marathon-rabbit:${project.version}</name>
                            <build>
                                <maintainer>andrew.reid@hpe.com</maintainer>
                                <from>java:8</from>
                                <tags>
                                    <tag>latest</tag>
                                </tags>
                                <labels>
                                    <com.hpe.caf.api.worker.configurationsource>groupId:${caf-ConfigurationSource.groupId},artifactId:${caf-ConfigurationSource.artifactId},version:${caf-ConfigurationSource.version}</com.hpe.caf.api.worker.configurationsource>
                                    <com.hpe.caf.api.codec>groupId:${caf-Codec.groupId},artifactId:${caf-Codec.artifactId},version:${caf-Codec.version}</com.hpe.caf.api.codec>
                                    <com.hpe.caf.api.autoscale.servicesource>groupId:${autoscaler-ServiceSource.groupId},artifactId:${autoscaler-ServiceSource.artifactId},version:${autoscaler-ServiceSource.version}</com.hpe.caf.api.autoscale.servicesource>
                                    <com.hpe.caf.api.autoscale.servicescaler>groupId:${autoscaler-ServiceScaler.groupId},artifactId:${autoscaler-ServiceScaler.artifactId},version:${autoscaler-ServiceScaler.version}</com.hpe.caf.api.autoscale.servicescaler>
                                    <com.hpe.caf.api.autoscale.workloadanalyser>groupId:${autoscaler-WorkloadAnalyser.groupId},artifactId:${autoscaler-WorkloadAnalyser.artifactId},version:${autoscaler-WorkloadAnalyser.version}</com.hpe.caf.api.autoscale.workloadanalyser>
                                </labels>
                                <entryPoint>
                                    <exec>
                                        <args>/maven/tini-${tini.version}.exe</args>
                                        <args>-v</args>
                                        <args>--</args>
                                        <args>/maven/scaler.sh</args>
                                    </exec>
                                </entryPoint>
                                <assembly>
                                    <mode>tar</mode>
                                    <inline>
                                        <fileSets>
                                            <fileSet>
                                                <includes>
                                                    <include>*.sh</include>
                                                </includes>
                                                <fileMode>0755</fileMode>
                                            </fileSet>
                                            <fileSet>
                                                <includes>
                                                    <include>*.yaml</include>
                                                </includes>
                                            </fileSet>
                                        </fileSets>
                                        <dependencySets>
                                            <dependencySet>
                                                <useProjectArtifact>false</useProjectArtifact>
                                                <scope>runtime</scope>
                                                <excludes>
                                                    <exclude>com.github.krallin:tini</exclude>
                                                </excludes>
                                            </dependencySet>
                                            <dependencySet>
                                                <useProjectArtifact>false</useProjectArtifact>
                                                <fileMode>0755</fileMode>
                                                <includes>
                                                    <include>com.github.krallin:tini</include>
                                                </includes>
                                            </dependencySet>
                                        </dependencySets>
                                    </inline>
                                </assembly>
                            </build>
                        </image>
                    </images>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
