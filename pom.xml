<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.hpe.caf.autoscale</groupId>
    <artifactId>autoscale-marathon-rabbit-container</artifactId>
    <version>3-SNAPSHOT</version>
    <packaging>pom</packaging>

    <parent>
        <groupId>com.hpe.caf</groupId>
        <artifactId>caf-latest-develop</artifactId>
        <version>1-SNAPSHOT</version>
        <relativePath>../caf-latest-develop</relativePath>
    </parent>

    <properties>
        <caf.autoscale-scaler.impl>autoscale-scaler-marathon</caf.autoscale-scaler.impl>
        <caf.autoscale-scaler.version>${caf.autoscale-scaler-marathon.version}</caf.autoscale-scaler.version>
        <caf.autoscale-source.impl>autoscale-source-marathon</caf.autoscale-source.impl>
        <caf.autoscale-source.version>${caf.autoscale-source-marathon.version}</caf.autoscale-source.version>
        <caf.autoscale-workload.impl>autoscale-workload-rabbit</caf.autoscale-workload.impl>
        <caf.autoscale-workload.version>${caf.autoscale-workload-rabbit.version}</caf.autoscale-workload.version>
        <caf.config.impl>config-file</caf.config.impl>
        <caf.config.version>${caf.config-file.version}</caf.config.version>
        <caf.codec.impl>codec-json</caf.codec.impl>
        <caf.codec.version>${caf.codec-json.version}</caf.codec.version>
        <caf.worker-store.impl>worker-store-cs</caf.worker-store.impl>
        <caf.worker-store.version>${caf.worker-store-cs.version}</caf.worker-store.version>
        <caf.worker-queue.impl>worker-queue-rabbit</caf.worker-queue.impl>
        <caf.worker-queue.version>${caf.worker-queue-rabbit.version}</caf.worker-queue.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.hpe.caf</groupId>
            <artifactId>caf-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.hpe.caf.config</groupId>
            <artifactId>${caf.config.impl}</artifactId>
            <version>${caf.config.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hpe.caf.autoscale</groupId>
            <artifactId>autoscale-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.hpe.caf.autoscale</groupId>
            <artifactId>autoscale-marathon-shared</artifactId>
        </dependency>
        <dependency>
            <groupId>com.hpe.caf.autoscale</groupId>
            <artifactId>${caf.autoscale-source.impl}</artifactId>
            <version>${caf.autoscale-source.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hpe.caf.autoscale</groupId>
            <artifactId>${caf.autoscale-scaler.impl}</artifactId>
            <version>${caf.autoscale-scaler.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hpe.caf.autoscale</groupId>
            <artifactId>${caf.autoscale-workload.impl}</artifactId>
            <version>${caf.autoscale-workload.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hpe.caf.codec</groupId>
            <artifactId>${caf.codec.impl}</artifactId>
            <version>${caf.codec.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.krallin</groupId>
            <artifactId>tini</artifactId>
            <scope>runtime</scope>
            <type>exe</type>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.jolokia</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>${docker.maven.version}</version>
                <executions>
                    <execution>
                        <id>start</id>
                        <phase>pre-integration-test</phase>
                        <goals>
                            <goal>build</goal>
                            <goal>start</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>stop</id>
                        <phase>post-integration-test</phase>
                        <goals>
                            <goal>stop</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>upload-docker-container</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>push</goal>
                        </goals>
                        <configuration>
                            <image>autoscale-container</image>
                        </configuration>
                    </execution>
                </executions>
                <configuration>
                    <watchInterval>500</watchInterval>
                    <logDate>default</logDate>
                    <verbose>true</verbose>
                    <images>
                        <image>
                            <alias>autoscale-container</alias>
                            <name>${docker.dev.repo}/caf/autoscale-marathon-rabbit:${project.version}</name>
                            <build>
                                <maintainer>andrew.reid@hpe.com</maintainer>
                                <from>java:8</from>
                                <tags>
                                    <tag>latest</tag>
                                </tags>
                                <labels>
                                    <com.hpe.caf.api.worker.configurationsource>groupId:com.hpe.caf.config,artifactId:${caf.config.impl},version:${caf.config.version}</com.hpe.caf.api.worker.configurationsource>
                                    <com.hpe.caf.api.codec>groupId:com.hpe.caf.codec,artifactId:${caf.codec.impl},version:${caf.codec.version}</com.hpe.caf.api.codec>
                                    <com.hpe.caf.api.autoscale.servicesource>groupId:com.hpe.caf.autoscale,artifactId:${caf.autoscale-source.impl},version:${caf.autoscale-source.version}</com.hpe.caf.api.autoscale.servicesource>
                                    <com.hpe.caf.api.autoscale.servicescaler>groupId:com.hpe.caf.autoscale,artifactId:${caf.autoscale-scaler.impl},version:${caf.autoscale-scaler.version}</com.hpe.caf.api.autoscale.servicescaler>
                                    <com.hpe.caf.api.autoscale.workloadanalyser>groupId:com.hpe.caf.autoscale,artifactId:${caf.autoscale-workload.impl},version:${caf.autoscale-workload.version}</com.hpe.caf.api.autoscale.workloadanalyser>
                                </labels>
                                <entryPoint>
                                    <exec>
                                        <args>/maven/tini-${tini.version}.exe</args>
                                        <args>-v</args>
                                        <args>--</args>
                                        <args>/maven/scaler.sh</args>
                                    </exec>
                                </entryPoint>
                                <assembly>
                                    <mode>tar</mode>
                                    <inline>
                                        <fileSets>
                                            <fileSet>
                                                <includes>
                                                    <include>*.sh</include>
                                                </includes>
                                                <fileMode>0755</fileMode>
                                            </fileSet>
                                            <fileSet>
                                                <includes>
                                                    <include>*.yaml</include>
                                                </includes>
                                            </fileSet>
                                        </fileSets>
                                        <dependencySets>
                                            <dependencySet>
                                                <useProjectArtifact>false</useProjectArtifact>
                                                <scope>runtime</scope>
                                                <excludes>
                                                    <exclude>com.github.krallin:tini</exclude>
                                                </excludes>
                                            </dependencySet>
                                            <dependencySet>
                                                <useProjectArtifact>false</useProjectArtifact>
                                                <fileMode>0755</fileMode>
                                                <includes>
                                                    <include>com.github.krallin:tini</include>
                                                </includes>
                                            </dependencySet>
                                        </dependencySets>
                                    </inline>
                                </assembly>
                            </build>
                        </image>
                    </images>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <ciManagement>
        <system>hudson</system>
        <url>http://cafbuilder.hpswlabs.hp.com:8080/job/autoscale-container/</url>
    </ciManagement>

</project>
